{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Teensy",
            "type": "shell",
            "command": "pio",
            "args": ["run"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/../teensy_code"
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Upload to Teensy",
            "type": "shell",
            "command": "pio",
            "args": ["run", "--target", "upload"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/../teensy_code"
            },
            "dependsOn": "Build Teensy",
            "problemMatcher": ["$gcc"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Monitor Teensy Serial",
            "type": "shell",
            "command": "pio",
            "args": ["device", "monitor"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/../teensy_code"
            },
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "Sync Pi Code",
            "type": "shell",
            "command": "rsync",
            "args": [
                "-avz",
                "--delete",
                "--exclude=target",
                "--exclude=.git",
                "../pi_code/",
                "pi5:~/km_box_project/pi_code/"
            ],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build on Pi",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi5",
                "cd ~/km_box_project/pi_code && cargo build"
            ],
            "group": "build",
            "dependsOn": "Sync Pi Code",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Run on Pi",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi5",
                "cd ~/km_box_project/pi_code && cargo run"
            ],
            "group": "test",
            "dependsOn": "Build on Pi",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Install Rust on Pi",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi5",
                "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y && source ~/.cargo/env"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}
