{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PlatformIO: Build",
            "type": "shell",
            "command": "${userHome}/.platformio/penv/Scripts/platformio.exe",
            "args": ["run"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$platformio"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "PlatformIO: Upload",
            "type": "PlatformIO",
            "task": "Upload",
            "group": "build",
            "problemMatcher": ["$platformio"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "PlatformIO: Monitor",
            "type": "PlatformIO",
            "task": "Monitor",
            "group": "test",
            "isBackground": true,
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            }
        },
        {
            "label": "Test SSH to Pi",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi5",
                "echo 'SSH connection successful!'"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Install Rust on Pi",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi5",
                "curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Create Rust Project on Pi",
            "type": "shell",
            "command": "ssh",
            "args": [
                "pi5",
                "mkdir -p ~/km_box_project && cd ~/km_box_project && /home/otis/.cargo/bin/cargo new km_pi --bin"
            ],
            "group": "build",
            "dependsOn": "Install Rust on Pi",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}